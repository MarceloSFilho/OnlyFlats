
<div class="col-md-6 offset-md-3">
  <%= simple_form_for(@flat) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :title, placeholder: "Flat Title:" %>
      <%= f.input :address, placeholder: "Flat Adress:" %>
      <%= f.input :photo, as: :file %>
      <%= f.input :price, placeholder: "Only Numbers:" %>
      <div class="align-buttons">
        <div class="text-center">
          <div class="btn">
            <%= link_to "Back to flats", flats_path, class:"booking-button profile-button btn btn-primary btn-lg my-auto" %>
        </div>
          <div class="btn">
          <%= f.button :submit, class: "booking-button profile-button btn btn-primary btn-lg my-auto" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
