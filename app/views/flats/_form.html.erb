
<%= simple_form_for(@flat) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.input :title %>
    <%= f.input :address %>
    <%= f.input :photo %>
    <%= f.input :price %>
    <%= f.input :avaliable %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
